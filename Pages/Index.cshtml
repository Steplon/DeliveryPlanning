@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/bulk-storage-tank-5.jpg" alt="Storage Tanks" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    First in class delivery planning.
                    <a asp-page="/About">Learn More</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/RoadTanker.jpg" alt="Road Tanker" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Delivered on time everytime.
                    <a asp-page="/About">Learn More</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4 col-sm-12">
        <h2>Services</h2>
        <ul>
            <li>Storage tank installations</li>
            <li>Mainteance of tank isntallations</li>
            <li>Delivery management</li>
            <li>Delivery schedule visibility</li>
            <li>Remote monitoring of your tank levels</li>
        </ul>
    </div>
    <div class="col-md-4 col-sm-12">
        <h2>Comments</h2>
        <ul>
            <li></li>

        </ul>
    </div>
    <div class="col-md-4 col-sm-12">
        <h2>Weather</h2>
    </div>
</div>
